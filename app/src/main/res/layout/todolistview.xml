<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/startTimeDisplayer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="text"
                android:text=""
                android:textAllCaps="true"
                android:textFontWeight="700"
                android:hint="Enter start time"
                android:textColorHint="#B3B0B0"
                android:ems="12"
                android:fontFamily="sans-serif-condensed"
                android:padding="8dp"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/endTimeDisplayer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="text"
                android:text=""
                android:textAllCaps="true"
                android:textFontWeight="700"
                android:hint="Enter end time"
                android:textColorHint="#B3B0B0"
                android:ems="12"
                android:fontFamily="sans-serif-condensed"
                android:padding="8dp"
                android:layout_margin="4dp"/></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text"
            android:elevation="6dp"
            android:hint="Task to do :"
            android:textColorHint="#B3B0B0"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:id="@+id/todoContentDisplayer"
            />


    </LinearLayout>
</androidx.cardview.widget.CardView>